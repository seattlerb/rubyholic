<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
  <title><%= h (params[:action] =~ /show|edit/) ? @group.name + " on " : '' %> Rubyholic.com v. <%= Group::RUBYHOLIC_VERSION %></title>
  <%= my_stylesheet_link_tag 'niftyCorners' %>
  <%= my_stylesheet_link_tag 'niftyPrint', :media => "print" %>
  <%= my_stylesheet_link_tag 'style' %>
  <%= javascript_include_tag 'prototype' %>
  <%= javascript_include_tag 'groups_manager' %>
  <%= javascript_include_tag 'nifty' %>
  <script type="text/javascript">
    window.onload=function(){
      if (!NiftyCheck()) return;
      Rounded("div.rounded","all","#fff","#ddd","smooth");
      Rounded("html#page","all","#890000","#fff","smooth");
    }
  </script>
</head>

<body>
<div id="page">

  <div id="header">
    <h1><a href="/groups/index" style="text-decoration: none"><span class="ruby">ruby</span>holic</a></h1>
    <hr>
  </div>
  
  <div class="flash">&nbsp;
    <%= flash[:notice] %>
  </div>

  <div id="content">
    <%= @content_for_layout %>
  </div>

  <p id="footer">
  <%= link_to "Rubyholic.com, v. #{Group::RUBYHOLIC_VERSION}", :action => :index %>
  </p>

</div>

</body>
</html>
